.container{
    position: relative;
    width: 100%; 
    height: 100vh; 
  }
  .location{
    position: absolute ;
    width: 100%;
    height: 88rpx;
    z-index: 999;
    top: 0;
    background-color: #fff;
    font-size: 28rpx;
    box-shadow:3px 5px 10px #e0e0e0; 
  }
  .location-city{
    height: 88rpx;
    position: absolute;
    width: 160rpx;
    line-height: 88rpx;
    text-align: center;
    color: #999999;
    
  }
  .location-city::after{
    border-left: 4px solid transparent;  
    border-right: 4px solid transparent;  
    border-top: 4px solid #a4a4a4;  
    content: "";  
    position: relative;      
    width: 0; 
    top: 25rpx;
    
  }
  .location-input{
    height: 88rpx;
    width: 470rpx;
    margin-left: 160rpx;
    line-height: 88rpx;
    /* background: red; */
  }
  .location-cancel{
    width: 120rpx;
    height: 88rpx;
    position: absolute;
    right: 0;
    top: 0;
    line-height: 88rpx;
    color: #999999;
  }
  .didiMap{
    position: absolute;
    left: 0;
   top:88rpx;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 10000rpx;
    z-index: 1;
  }
  
 