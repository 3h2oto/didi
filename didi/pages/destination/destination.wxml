<view class="container">
    <view class="location">
        <view class="location-city">
            <text>南昌</text>
        </view>
        <input type="text" class="location-input"  bindinput="searchInputend"placeholder="你在哪儿上车"placeholder-style="color:#cccccc"/>
        <navigator url="/pages/index/index" redirect ><view class="location-cancel">取消</view></navigator>
    </view>
    <scroll-view  scroll-with-animation="{{true}}" >
        <view class="destination" wx:for="{{entity}}" wx:key="{{item.id}}">
               <view class="destination-content">
                   <view class="content-image">
                   <image src="../../assets/images/clock.png"></image>
                </view>
                   <view class="content">
                        <text class="content-name">{{item.name}}</text>
                    <text class="content-detail">{{item.detail}}</text>
                   </view>
               </view> 
        </view>
    </scroll-view>

</view>