page,.container{
    width: 100%;
    height: 100%;
    background-color: #f3f4f5;
}
.location{
    position: fixed ;
    width: 100%;
    height: 88rpx;
    z-index: 999;
    top: 0;
    background-color: #fff;
    font-size: 28rpx;
    box-shadow:3px 5px 10px #e0e0e0; 
  }
  .location-city{
    height: 88rpx;
    position: absolute;
    width: 160rpx;
    line-height: 88rpx;
    text-align: center;
    color: #999999;
    
  }
  .location-city::after{
    border-left: 4px solid transparent;  
    border-right: 4px solid transparent;  
    border-top: 4px solid #a4a4a4;  
    content: "";  
    position: absolute;      
    width: 0; 
    top: 40rpx;
    
  }
  .location-input{
    height: 88rpx;
    width: 470rpx;
    margin-left: 160rpx;
    line-height: 88rpx;
    /* background: red; */
  }
  .location-cancel{
    width: 120rpx;
    height: 88rpx;
    position: absolute;
    right: 0;
    top: 0;
    line-height: 88rpx;
    color: #999999;
  }
  .destination{
    
    box-shadow:10px 50px 10px #e0e0e0;
    top: 20rpx;
    background-color: #fff;
    height: 100%;
    width: 100%;
  
  }
  .destination-content{
      width: 712px;
     height: 119rpx;
      
      border: 1px solid #ebebeb;
      box-shadow:3px 5px 10px #e0e0e0;
      display: flex;
      align-items: center;
  }
  .content-image{
      width: 80rpx;
      height: 119rpx;
      line-height: 119rpx;
      text-align: center;
  }
  .destination-content image{
      width: 20rpx;
      height: 20rpx;
     opacity: .1;
     color: #999999;

  }
  .content-name{
      display: block;
      color: #333333;
      font-size: 26rpx;
  }
  .content-detail{
      display: block;
      color: #999999;
      font-size: 26rpx;
  }
  