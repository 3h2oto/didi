.container{
    position: relative;
    width: 100%;
    height: 100vh;
  }
  .total{
      width: 710rpx;
      /* height: 400rpx; */
      /* background: red; */
      position: absolute;
      z-index: 99;
   
      margin-left: 20rpx;
      margin-right: 20rpx;
      margin-top: 20rpx;
      height: 358rpx;
      box-shadow:3px 5px 10px #e0e0e0; 
      box-sizing: border-box;
      border: 1px solid #f5f5f5;
  }
  .total-driver{
    height: 190rpx;
    background: #fff;
    border-bottom: 1px solid #f5f5f5;
    box-sizing: border-box;
  }
  .driver-info{
      width: 400rpx;
      float: left;
      display: flex;
      align-items: center;
      margin-left: 32rpx;
      margin-top: 20rpx;
  }
  .driver-detailed{
      margin-left: 20rpx;
  }
  .detailed-name{
      color: #333333;
      font-size: 35rpx;
      flex: 1;
  }
  .detailed-name .orderTotal{
      position: absolute;
      display: inline-block;
      font-size: 26rpx;
      opacity: .6;
      margin-left: 5rpx;
  }
  .detailed-Cartnumber{
      margin-top: 17rpx;
     font-size: 30rpx;
     color: #484848;
     height: 30rpx;
     background-color: #eeeeee;
     border: 1px solid #cccccc;
    padding-left: 10rpx;
  }
  .detailed-cart{
      margin-top: 17rpx;
      font-size: 30rpx;
      color: #666666;
  }
  .driver-message{
      float: right;
      display: flex;
      height: 190rpx;
      align-items: center;
      margin-right: 32rpx;
      text-align: center;
  }
  .driver-message .mas{
      margin-right: 24rpx;
  }
  .total-looking{
    background: #fff;
   width: 710rpx;
    height: 87rpx;
   display: flex;
   align-items: center;
   justify-content: center;
   border-bottom: 1px solid #f5f5f5;
}
.looking-desc{
  margin-left: 10rpx;
    font-size: 26rpx;
    opacity: .5;
}
.total-prompt{
    background: #fff;
    width: 710rpx;
    height: 87rpx;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #f5f5f5;
    color: rgba(0, 0, 0, .5);
    text-align: center;
}
.prompt-time{
    color: #fc9153;
    display: inline;
}
.ft{
    position: absolute;
    height: 88rpx;
    width: 710rpx;
   top: 800rpx;
    display: flex;
    align-items: center;
   color: rgba(0, 0, 0, .6);
    background: #fff;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 260rpx;
    box-shadow:3px 5px 10px #e0e0e0; 
   box-sizing: border-box
}
.ft-cancel{
    width: 235rpx;
    text-align: center;
    border-right: 1px solid #f5f5f5;
 
}
.ft-help{
    width: 235rpx;
    text-align: center;
    border-right: 1px solid #f5f5f5;
   
}
.ft-app{
   
    text-align: center;
}

  .didiMap{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }